<%- include("header.ejs") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let index = 0; index < newItem.length; index++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newItem[index] %></p>
  </div>
  <% } %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="UserInp"
      placeholder="Enter your TODO"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer.ejs") -%>
